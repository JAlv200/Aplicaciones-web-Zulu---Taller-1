@page "/"

<PageTitle>Menu de Inicio</PageTitle>

<MudText Typo="Typo.h2" GutterBottom="true">Aplicacion de empleados</MudText>

<AuthorizeView Roles="Admin, User">
    <Authorized>
        @if (context.User.IsInRole("Admin"))
        {
            <MudText Typo="Typo.h3" Class="m-2" GutterBottom="true">Bienvenido administrador @context.User.Identity?.Name, se encuentra autenticado</MudText>
        }
        else
        {
            <MudText Typo="Typo.h3" Class="m-2" GutterBottom="true">Bienvenido Usuario @context.User.Identity?.Name, se encuentra autenticado</MudText>
        }
    </Authorized>
    <NotAuthorized>
        <MudText Typo="Typo.h3" Class="m-2" GutterBottom="true">Se encuentra como usuario anonimo</MudText>
    </NotAuthorized>
</AuthorizeView>




<MudText Class="m-2">Aplicacion empleados - Curso servicios WEB 2025-2</MudText>



